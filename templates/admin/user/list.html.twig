{% extends 'admin/layout.html.twig' %}

{% block content %}
    <div class="row wrapper border-bottom white-bg" style="padding-top: 20px; margin-bottom: 20px">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                {% if user.isAdmin == true %}
                <tr>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.email }}</td>
                    <td class="text-center">
                        <ul class="" style="list-style-type: none; padding: 0; margin: 0;">
                            <li style="display: inline-block; padding: 0 5px;">
                                <a href="{{ path('admin_view_user', { 'id': user.id }) }}" class="action" title="Détail"> <i class="fa fa-eye"></i></a>
                            </li>
                            <li style="display: inline-block; padding: 0 5px;">
                                <a href="{{ path('admin_edit_user', { 'id': user.id }) }}" class="action" title="Editer"><i class="fa fa-edit"></i></a>
                            </li>
                            <li style="display: inline-block; padding: 0 5px;">
                                <a href="{{ path('admin_delete_user', { 'id': user.id}) }}" class="action" data-toggle="modal" data-target="#{{ user.id }}"><i class="fa fa-trash"></i></a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
