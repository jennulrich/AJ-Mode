{% extends 'admin/layout.html.twig' %}

{% block content %}
    <div class="row">
        {% for partnerDelivery in partnerDeliveries %}
            <div class="col-md-3">
                <div class="contact-box text-center">
                        <div class="col-sm-12">
                            <h3><strong>{{ partnerDelivery.firstname }} {{ partnerDelivery.lastname }}</strong></h3>
                            <p><i class="fa fa-map-marker"></i> {{ partnerDelivery.city }}</p>
                            <address>
                                Email : <strong>{{ partnerDelivery.email }}</strong><br>
                                N° de téléphone : {{ partnerDelivery.phone }}
                            </address>
                            <a href="#" data-toggle="modal" data-target="#{{ partnerDelivery.id }}">
                                <i class="fa fa-times-circle fa-2x" style="color: red; margin: 8px" title="Refuser l'inscription"></i>
                            </a>
                            <a href="#" data-toggle="modal" data-target="#{{ partnerDelivery.id }}-yes">
                                <i class="fa fa-check-circle fa-2x" style="color: green; margin: 8px" title="Valider l'inscription"></i>
                            </a>
                        </div>
                        <div class="clearfix"></div>
                </div>
            </div>
        {% endfor %}
    </div>





    <style>
        .modal h2 {
            color: #575757;
            /*font-size: 30px;*/
            font-size: 19px;
            text-align: center;
            font-weight: 600;
            text-transform: none;
            position: relative;
            margin: 25px 0;
            padding: 0;
            line-height: 40px;
            display: block;
        }

        .modal-body {
            border-radius: 3px;
        }
    </style>
    <!-- Modal confirmation de suppression -->
    {% for partnerDelivery in partnerDeliveries %}
        <div class="modal inmodal" id="{{ partnerDelivery.id }}" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog animated fadeIn">
                <div class="modal-content animated fadeIn">
                    <div class="modal-body">
                        <div class="text-center" style="margin-bottom: 25px;">
                            <i class="fa fa-exclamation-circle animated bounceIn"
                               style="font-size: 30pt; color: orange;"></i>
                            <h2>Êtes-vous sûr de vouloir supprimer cette demande d'inscription ?</h2>
                            <span>Celle-ci sera définitivement supprimée de la liste.</span>
                        </div>

                        <div class="text-center">
                            <button type="button" class="btn btn-default" data-dismiss="modal"
                                    style="background-color: #D0D0D0; border: 1px solid #D0D0D0; color: white;">Non
                            </button>
                            <a href="#" class="btn btn-primary"
                               data-target="#confirm-delete"
                               style="background-color: #DD6B55; border: 1px solid #DD6B55;">Oui</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    {% endfor %}


    {% for partnerDelivery in partnerDeliveries %}
        <div class="modal inmodal" id="{{ partnerDelivery.id }}-yes" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog animated fadeIn">
                <div class="modal-content animated fadeIn">
                    <div class="modal-body">
                        <div class="text-center" style="margin-bottom: 25px;">
                            <i class="fa fa-exclamation-circle animated bounceIn"
                               style="font-size: 30pt; color: orange;"></i>
                            <h2>Êtes-vous sûr de vouloir valider cette demande d'inscription ?</h2>
                        </div>

                        <div class="text-center">
                            <button type="button" class="btn btn-default" data-dismiss="modal"
                                    style="background-color: #D0D0D0; border: 1px solid #D0D0D0; color: white;">Non
                            </button>
                            <a href="#" class="btn btn-primary"
                               data-target="#confirm-delete"
                               style="background-color: #DD6B55; border: 1px solid #DD6B55;">Oui</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
